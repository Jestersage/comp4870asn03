@{
    ViewBag.Title = "RoleIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>&nbsp;</p>
<div class="spacerBody">
    @Html.ActionLink("Create New Role", "RoleCreate") | @Html.ActionLink("Add Role to User", "RoleAddToUser") | @Html.ActionLink("Manage User Accounts", "DisableUser")
    <h2>Role index</h2>

    @foreach (string s in Model)
    {
        <p>
            @s
            <span onclick=" return confirm('Are you sure to delete?') " >
                <a href="/Role/RoleDelete?RoleName=@s" class="delLink">Delete</a>
            </span>
        </p>
    }

   

</div>

